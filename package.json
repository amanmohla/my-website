{
    "name": "aman-mohla-website",
    "version": "1.0.0",
    "description": "Personal website and blog of Aman Prakash Mohla.",
    "scripts": {
        "dev": "NODE_ENV=development next -p 8082",
        "clean": "rm -rf .next",
        "lint": "npx eslint ./ --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "npx eslint ./ --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier -l '**/*.{tsx,ts,js,json}'",
        "format:fix": "prettier --write '**/*.{tsx,ts,js,json}'",
        "build": "NODE_ENV=production next build",
        "typecheck": "tsc --noEmit",
        "test": "npm run clean && npm run lint:fix && npm run format:fix && npm run typecheck"
    },
    "keywords": [
        "next.js",
        "react.js",
        "blog",
        "theme-ui",
        "typescript"
    ],
    "author": "Aman Prakash Mohla",
    "license": "ISC",
    "browserslist": [
        "last 2 version"
    ],
    "dependencies": {
        "@chakra-ui/react": "^1.6.4",
        "@emotion/react": "^11.4.0",
        "@emotion/styled": "^11.3.0",
        "axios": "^0.21.1",
        "chart.js": "^2.9.4",
        "date-fns": "^2.22.1",
        "framer-motion": "^4.1.17",
        "gray-matter": "^4.0.2",
        "next": "^11.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-icons": "^4.2.0",
        "react-markdown": "^6.0.2",
        "typescript": "^4.3.5"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@types/chart.js": "^2.9.27",
        "@types/jest": "^25.2.2",
        "@types/node": "^14.14.6",
        "@types/react": "^16.9.55",
        "@types/react-dom": "^16.9.9",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "babel-jest": "^26.6.2",
        "eslint": "^7.12.1",
        "eslint-config-next": "^11.0.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-markdown": "^2.2.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "prettier": "^2.1.1"
    }
}
